<BorderPane><top>
    <MenuBar>
        <menus>
            <Menu text="File">
                <items>
                    <MenuItem text="New"/>
                    <MenuItem text="Open"/>
                    <MenuItem text="Save"/>
                    <MenuItem text="Close"/>
                </items>
            </Menu>
            <Menu text="Edit">
                <items>
                    <MenuItem text="Cut"/>
                    <MenuItem text="Copy"/>
                    <MenuItem text="Paste"/>
                </items>
            </Menu>
            <Menu text="Help"/>
        </menus>
    </MenuBar>
</top>
    <left>
        <VBox alignment="CENTER">
            <children>
                <GridPane alignment="CENTER" hgap="10" vgap="10">
                    <children>
                        <Label text="Boutons : " GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <Button text="Bouton 1" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <Button text="Bouton 2" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                        <Button text="Bouton 3" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                    </children>
                </GridPane>
                <Separator orientation="VERTICAL"/>
            </children>
        </VBox>
    </left>
    <center>
        <GridPane alignment="CENTER" hgap="10" vgap="10">
            <children>
                <Label text="Name :" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                <Label text="Email :" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                <Label text="Password :" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                <Button text="Submit" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <Button text="Cancel" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
            </children>
        </GridPane>
    </center>
    <bottom>
        <VBox alignment="CENTER">
            <children>
                <Separator orientation="HORIZONTAL"/>
                <Label text="Ceci est un label de bas de page" alignment="CENTER"/>
            </children>
        </VBox>
    </bottom></BorderPane>